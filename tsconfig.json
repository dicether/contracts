{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [
      "es2017",
      "dom"
    ],
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "pretty": true,
    "strict": true,

    "outDir": "lib",
    "baseUrl": ".",
    "rootDir": ".",
    "noImplicitThis": true,
    "allowJs": false
  },
  "include": [
    "./node_modules/types-ethereumjs-util/index.d.ts",
    "./node_modules/web3-typescript-typings/index.d.ts",
    "./node_modules/types-bn/index.d.ts",
    "./globals.d.ts",
    "./truffle.d.ts",
    "./globalsAugmented.d.ts",
    "./test/**/*"
  ]
}
